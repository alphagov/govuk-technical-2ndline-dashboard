<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="refresh" content="60">
    <% if dark_mode %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/darkly/bootstrap.min.css" integrity="sha384-w+8Gqjk9Cuo6XH9HKHG5t5I1VR4YBNdPt/29vwgfZR485eoEJZ8rJRbm3TR32P6k" crossorigin="anonymous">
    <% else %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <% end %>
    <link rel="stylesheet" href="/assets/css/zendesk.css" crossorigin="anonymous">
    <title>GOV.UK Zendesk Display Screen</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <h1>Currently open Zendesk tickets</h1>
        </div>
      </div>
      <div class="row">
        <% number_of_tickets.each do |queue_name, number_of_tickets_in_queue| %>
          <% unless queue_name == 'low' && hide_low_queue %>
          <div class="col">
            <h2 class="h1">
              <%
                if number_of_tickets_in_queue >= 5
                  number_colour = 'number-red'
                elsif number_of_tickets_in_queue > 0
                  number_colour = 'number-amber'
                else
                  number_colour = 'number-green'
                end
              %>
              <span class="<%= number_colour %>"><%= number_of_tickets_in_queue %></span>
              <small class="text-muted"><%= queue_name %></small>
            </h2>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </body>
</html>
